<UserControl x:Class="BankApp.AdminPanel.Views.Components.ErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankApp.AdminPanel.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="Black" BorderThickness="3" >
        <TextBlock  Height="25" Foreground="{Binding Path=TextColor}" FontSize="22" Background="Black" TextAlignment="Center" FontWeight="Medium" Text="{Binding Message}"/>
    </Border>
</UserControl>
